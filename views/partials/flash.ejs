<% if(success && success.length) {%>
<div
  id="flash-success"
  class="alert alert-success alert-dismissible fade show w-50"
  role="alert"
>
  <strong>Success!</strong> <%= success%>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if(error && error.length) {%>
<div
  id="flash-error"
  class="alert alert-danger alert-dismissible fade show w-50"
  role="alert"
>
  <strong>Error!</strong> <%= error%>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
